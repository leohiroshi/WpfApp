<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfApp.Views"
        Title="WpfApp - Cadastros" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Pessoas" DataContext="{Binding PessoasVM}">
                <views:PessoasView />
            </TabItem>
            <TabItem Header="Produtos" DataContext="{Binding ProdutosVM}">
                <views:ProdutosView />
            </TabItem>
            <TabItem Header="Pedidos" DataContext="{Binding PedidosVM}">
                <views:PedidoView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>